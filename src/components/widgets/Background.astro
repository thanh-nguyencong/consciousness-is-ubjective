<script>
  import { Scene, Engine, ArcRotateCamera, SceneLoader, Vector3, HemisphericLight } from "babylonjs"

  const canvas = document.getElementById("renderCanvas") as HTMLCanvasElement
  const engine = new Engine(canvas, true)
  const scene = new Scene(engine)
  SceneLoader.ImportMeshAsync("", "https://assets.babylonjs.com/meshes/", "box.babylon")
  const camera = new ArcRotateCamera("camera", -Math.PI / 2, Math.PI / 2.5, 15, new Vector3(0, 0, 0))
  camera.attachControl(canvas, true)
  const light = new HemisphericLight("light", new Vector3(1, 1, 0), scene)
  engine.runRenderLoop(function () {
    scene.render()
  })
</script>

<canvas id="renderCanvas"></canvas>

<style>
  #renderCanvas {
    position: absolute;
    top: 0;
    left: 0;
    height: 100%;
    width: 100%;
  }
</style>